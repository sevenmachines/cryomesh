#
# Description:
#		A 3 cluster bundle connected in a circle, ie, A->B->C->A
#		with 1 primary input to A and a primary output from C
#

create-cluster id=1 size=50 connectivity=10 
create-cluster id=2 size=100 connectivity=20
create-cluster id=3 size=150 connectivity=30

connect-clusters inputid=1 outputid=2 width=10
connect-clusters inputid=2 outputid=3 width=20
connect-clusters inputid=3 outputid=1 width=30

create-primary-input  id=1 outputid=1 width=50
create-primary-output  id=2 inputid=3 width=10

# Initialiase data from file 'datafile'
#loaddata datafile

